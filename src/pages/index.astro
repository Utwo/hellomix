---
import Layout from "../layouts/Layout.astro";
import logo from "../assets/img/logo.svg";
import allPlaylistsJson from "../all-playlists.json";

const playlists = allPlaylistsJson.playlists.sort((a, b) => b.id - a.id);
---

<Layout>
  <header>
    <div>
      <a href="/" class="logo">
        <img src={logo.src} alt="Hello mix" />
      </a>
      <nav>
        <a href="/" class="active" title="All" aria-label="All playlists">
          <svg
            width="20"
            height="20"
            viewBox="0 0 20 20"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect
              x="2"
              y="2"
              width="6"
              height="6"
              rx="1"
              stroke="currentColor"
              stroke-width="1.5"
              fill="none"></rect>
            <rect
              x="12"
              y="2"
              width="6"
              height="6"
              rx="1"
              stroke="currentColor"
              stroke-width="1.5"
              fill="none"></rect>
            <rect
              x="2"
              y="12"
              width="6"
              height="6"
              rx="1"
              stroke="currentColor"
              stroke-width="1.5"
              fill="none"></rect>
            <rect
              x="12"
              y="12"
              width="6"
              height="6"
              rx="1"
              stroke="currentColor"
              stroke-width="1.5"
              fill="none"></rect>
          </svg>
        </a>
        <a href="/?shuffle" title="Shuffle" aria-label="Shuffle playlists">
          <svg
            width="20"
            height="20"
            viewBox="0 0 20 20"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M13.5 4.5L16 7L13.5 9.5"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M6.5 10.5L4 13L6.5 15.5"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              d="M16 7H11.5C9.567 7 8 8.567 8 10.5C8 12.433 9.567 14 11.5 14H16"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"></path>
            <path
              d="M4 6H8.5C10.433 6 12 7.567 12 9.5C12 11.433 10.433 13 8.5 13H4"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"></path>
          </svg>
        </a>
      </nav>
    </div>
    <h2># discover, play, play more and share #</h2>
  </header>

  <section class="all">
    <ul>
      {
        playlists.map((playlist, index) => {
          // First 12 images (above the fold) get high priority, rest get low priority
          const fetchPriority = index < 12 ? "high" : "low";
          return (
            <li>
              <a href={`/?mix=${playlist.slug}`} title={playlist.name}>
                <img
                  src={`/albums/${playlist.slug}.webp`}
                  width="400"
                  height="400"
                  alt={playlist.name}
                  loading={index < 12 ? "eager" : "lazy"}
                  decoding="async"
                  fetchpriority={fetchPriority}
                  class="playlist-image"
                  sizes="(max-width: 480px) 150px, (max-width: 768px) 180px, (max-width: 1200px) 220px, 250px"
                />
                <span class="playlist-name">{playlist.name}</span>
              </a>
            </li>
          );
        })
      }
    </ul>
  </section>

  <!-- Minimal bottom player - always rendered, shown/hidden by JavaScript -->
  <div id="pageslide" style="display: none;">
    <div class="modal-content"></div>
  </div>
</Layout>

<style>
  /* Modern, simplified design */
  * {
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
  }

  header {
    padding: 2rem 0;
    margin-bottom: 3rem;
  }

  header div {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  header .logo {
    flex-shrink: 0;
  }

  header .logo img {
    max-width: 200px;
    height: auto;
  }

  header nav {
    display: flex;
    gap: 1rem;
    margin: 0;
    width: auto;
  }

  header nav a {
    padding: 0.75rem;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.2s ease;
    border: none;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
  }

  header nav a svg {
    width: 20px;
    height: 20px;
    display: block;
  }

  header h2 {
    text-align: center;
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 2px;
    margin: 2rem 0 0;
    padding: 0;
    background: transparent;
    border-radius: 0;
    animation: none;
  }

  section.all {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem 4rem;
  }

  section.all ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  @media (max-width: 1200px) {
    section.all ul {
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    header div {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    header nav {
      width: 100%;
      justify-content: flex-start;
    }

    section.all ul {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 1rem;
    }

    section.all {
      padding: 0 1rem 3rem;
    }
  }

  @media (max-width: 480px) {
    section.all ul {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 0.75rem;
    }
  }

  .all li {
    margin: 0;
    padding: 0;
    border: none;
    background: transparent;
    border-radius: 12px;
    overflow: hidden;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    animation: none;
  }

  .all li:hover {
    transform: translateY(-4px);
  }

  .all li a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .all li img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }

  .all li a {
    padding-top: 0.75rem;
    font-size: 0.95rem;
    font-weight: 500;
    text-align: left;
    line-height: 1.4;
    text-transform: none;
  }

  .all li a .playlist-name {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Dark/Light theme based on device preferences */
  @media (prefers-color-scheme: dark) {
    html {
      background: #0a0a0a !important;
    }

    body {
      color: #e5e5e5 !important;
      background: #0a0a0a !important;
    }

    header div {
      background: transparent !important;
      border-bottom: none !important;
    }

    header h2 {
      color: #888 !important;
      background: transparent !important;
    }

    .all li a {
      color: #e5e5e5 !important;
    }

    .all li:hover {
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    header nav a {
      color: #ccc !important;
      background: rgba(255, 255, 255, 0.05) !important;
    }

    header nav a:hover {
      background: rgba(255, 255, 255, 0.1) !important;
      color: #fff !important;
    }

    header nav .active {
      background: #fff007 !important;
      color: #0a0a0a !important;
    }
  }

  @media (prefers-color-scheme: light) {
    html {
      background: #ffffff !important;
    }

    body {
      color: #1a1a1a !important;
      background: #ffffff !important;
    }

    header div {
      background: transparent !important;
      border-bottom: none !important;
    }

    header h2 {
      color: #666 !important;
      background: transparent !important;
    }

    .all li a {
      color: #1a1a1a !important;
    }

    .all li:hover {
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }

    header nav a {
      color: #666 !important;
      background: rgba(0, 0, 0, 0.04) !important;
    }

    header nav a:hover {
      background: rgba(0, 0, 0, 0.08) !important;
      color: #1a1a1a !important;
    }

    header nav .active {
      background: #fff007 !important;
      color: #1a1a1a !important;
    }
  }

  /* Lazy loading styles for playlist images - Pure CSS/HTML approach */
  .playlist-image {
    /* Placeholder background while loading - adapts to theme */
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.03) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.03) 100%
    );
    background-size: 200% 200%;
    /* Shimmer animation for loading state */
    animation: shimmer 2s ease-in-out infinite;
    /* Smooth transition when image appears */
    transition: opacity 0.4s ease-in-out;
    object-fit: cover;
  }

  @media (prefers-color-scheme: dark) {
    .playlist-image {
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.05) 0%,
        rgba(255, 255, 255, 0.12) 50%,
        rgba(255, 255, 255, 0.05) 100%
      );
    }
  }

  /* Shimmer effect animation */
  @keyframes shimmer {
    0% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 100% 100%;
    }
    100% {
      background-position: 0% 0%;
    }
  }

  /* When image is loaded and visible, stop shimmer and show full opacity */
  .playlist-image:not([src=""]) {
    animation: none;
  }

  /* Ensure images maintain aspect ratio and don't cause layout shift */
  .all li a img {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1;
  }

  /* Optimize image rendering */
  .playlist-image {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
    will-change: opacity;
  }
</style>

<!-- Client-side playlist player script -->
<script is:inline src="/js/playlist-player.js"></script>

<script is:inline define:vars={{ playlistsData: playlists.map((p) => p.name) }}>
  (function () {
    function init() {
      // Handle shuffle functionality
      if (
        new URLSearchParams(window.location.search).has("shuffle") &&
        playlistsData.length > 0
      ) {
        var random =
          playlistsData[Math.floor(Math.random() * playlistsData.length)];
        window.history.pushState({}, "", "/?mix=" + encodeURIComponent(random));
        if (window.checkAndShowModal) window.checkAndShowModal();
      }

      // Handle playlist clicks - prevent page refresh and show modal
      document.querySelectorAll(".all li a").forEach(function (link) {
        link.addEventListener("click", function (event) {
          event.preventDefault();
          var href = this.getAttribute("href");
          if (href && href.includes("?mix=")) {
            var mixParam = new URL(
              href,
              window.location.origin
            ).searchParams.get("mix");
            if (mixParam) {
              window.history.pushState({}, "", href);
              if (window.checkAndShowModal) window.checkAndShowModal(mixParam);
            }
          }
        });
      });
    }

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", init);
    } else {
      init();
    }
  })();
</script>
